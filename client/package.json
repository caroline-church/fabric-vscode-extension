{
  "name": "hyperledger-fabric",
  "displayName": "Hyperledger Fabric",
  "description": "Explore your Blockchain networks",
  "author": "Hyperledger",
  "keywords": [
    "distributed ledger technology",
    "blockchain",
    "DLT"
  ],
  "homepage": "https://hyperledger.github.io/composer/",
  "license": "Apache-2.0",
  "version": "0.19.8",
  "publisher": "hyperledger",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.19.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IBM-Blockchain/fabric-vscode-plugin"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onView:blockchainExplorer",
    "onCommand:blockchainExplorer.addConnectionEntry",
    "onCommand:blockchainExplorer.deleteConnectionEntry",
    "onCommand:blockchainExplorer.addConnectionIdentityEntry",
    "onCommand:blockchainExplorer.connectEntry",
    "onCommand:blockchainExplorer.disconnectEntry",
    "onCommand:createFabricProjectEntry"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "blockchain-explorer",
          "title": "Blockchain Explorer",
          "icon": "media/conga.png"
        }
      ]
    },
    "views": {
      "blockchain-explorer": [
        {
          "id": "blockchainExplorer",
          "name": "Fabric Explorer"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Blockchain configuration",
      "properties": {
        "fabric.connections": {
          "type": "array",
          "default": [],
          "description": "Configurations for connecting to a Blockchain network"
        }
      }
    },
    "commands": [
      {
        "command": "blockchainExplorer.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        },
        "category": "Blockchain"
      },
      {
        "command": "blockchainExplorer.connectEntry",
        "title": "Connect",
        "category": "Blockchain"
      },
      {
        "command": "blockchainExplorer.disconnectEntry",
        "title": "Disconnect",
        "icon": {
          "light": "resources/light/closr.svg",
          "dark": "resources/dark/close.svg"
        },
        "category": "Blockchain"
      },
      {
        "command": "blockchainExplorer.addConnectionEntry",
        "title": "Add Connection",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        },
        "category": "Blockchain"
      },
      {
        "command": "blockchainExplorer.deleteConnectionEntry",
        "title": "Delete Connection",
        "category": "Blockchain"
      },
      {
        "command": "blockchainExplorer.addConnectionIdentityEntry",
        "title": "Add Identity To Connection",
        "category": "Blockchain"
      },
      {
        "command": "createFabricProjectEntry",
        "title": "Create Fabric Project",
        "category": "Blockchain"
      },
      {
        "command": "blockchainExplorer.testEntry",
        "title": "Test",
        "category": "Blockchain"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blockchainExplorer.addConnectionEntry",
          "when": "view == blockchainExplorer && !blockchain-connected",
          "group": "navigation"
        },
        {
          "command": "blockchainExplorer.disconnectEntry",
          "when": "view == blockchainExplorer && blockchain-connected",
          "group": "navigation"
        },
        {
          "command": "blockchainExplorer.refreshEntry",
          "when": "view == blockchainExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "blockchainExplorer.testEntry",
          "when": "view == blockchainExplorer && viewItem == blockchain-instantiated-chaincode-item"
        },
        {
          "command": "blockchainExplorer.deleteConnectionEntry",
          "when": "view == blockchainExplorer && viewItem == blockchain-connection-item"
        },
        {
          "command": "blockchainExplorer.addConnectionIdentityEntry",
          "when": "view == blockchainExplorer && viewItem == blockchain-connection-item"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "pretest": "npm run lint & npm run licchk",
    "test": "node ./node_modules/vscode/bin/test --verbose",
    "posttest": "node ./node_modules/.bin/istanbul check-coverage",
    "licchk": "license-check-and-add",
    "tslint": "tslint",
    "lint": "npm run tslint 'src/**/*.ts' 'test/**/*.test.ts'"
  },
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/chai-as-promised": "7.1.0",
    "@types/glob": "5.0.35",
    "@types/mocha": "5.2.5",
    "@types/node": "10.5.4",
    "@types/sinon": "5.0.1",
    "@types/sinon-chai": "3.2.0",
    "angular-tslint-rules": "1.5.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "decache": "4.4.0",
    "electron": "1.7.12",
    "electron-rebuild": "1.8.2",
    "generator-fabric": "^0.0.2",
    "glob": "7.1.2",
    "istanbul": "0.4.5",
    "license-check-and-add": "2.3.6",
    "mocha": "5.2.0",
    "nyc": "^12.0.2",
    "remap-istanbul": "0.11.1",
    "sinon": "6.1.4",
    "sinon-chai": "3.2.0",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "tslint-loader": "3.6.0",
    "typescript": "3.0.1",
    "vsce": "1.44.0",
    "vscode": "1.1.18",
    "yo": "^2.0.5"
  },
  "dependencies": {
    "@fidm/x509": "1.1.3",
    "child-process-promise": "^2.2.1",
    "fabric-ca-client": "1.2.1",
    "fabric-client": "1.2.1",
    "fs-extra": "7.0.0",
    "vscode-languageclient": "4.4.0"
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "node_modules",
      "out",
      ".vscode-test",
      "coverage",
      "resources",
      "test/data",
      ".DS_Store",
      "test/.DS_Store"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".txt",
      ".vsix",
      ".yml"
    ],
    "insert_license": false,
    "clear_license": false,
    "license_formats": {
      "ts|acl|cto|js|qry": {
        "prepend": "/*",
        "append": "*/",
        "eachLine": {
          "prepend": " * "
        }
      },
      "vscodeignore": {
        "eachLine": {
          "prepend": "# "
        }
      },
      "md": {
        "file": "../markdown-license.txt"
      }
    }
  }
}
